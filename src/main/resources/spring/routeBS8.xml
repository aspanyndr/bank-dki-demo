<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd             http://camel.apache.org/schema/spring            http://camel.apache.org/schema/spring/camel-spring.xsd">
    <routeContext id="routeBS8_EligibleCheck" xmlns="http://camel.apache.org/schema/spring">
        <route id="bs8_route2">
            <from id="bs8_from1" uri="direct:bs_8"/>
            <log id="bs8_log1" message="Hello World BS8 at ${date:now} and body ${body}"/>
            <setProperty id="bs8_setProperty1" propertyName="timestamp">
                <simple resultType="java.lang.Long">
        			${date:now}
        		</simple>
            </setProperty>
            <!--      		Checkpoint request accepted -->
            <setProperty id="bs8_setProperty2" propertyName="bodyOri">
                <simple>${body}</simple>
            </setProperty>
            <setProperty id="bs8status_setProperty1" propertyName="status">
                <constant>1</constant>
            </setProperty>
            <process id="bs8_process1" ref="killRoute"/>
            <bean id="bs8_bean1" method="generatePayload('test')" ref="generatePayload"/>
            <to id="bs8_to1" uri="direct:gen_sign"/>
            <wireTap id="bs8_wireTap1" uri="direct:gen_log">
                <body>
                    <simple>${exchangeProperty.bodyOri}</simple>
                </body>
            </wireTap>
            <marshal id="bs8_marshal1" ref="jackson"/>
            <!--        		Checkpoint request payload ready to send to backend -->
            <setProperty id="bs8status_setProperty2" propertyName="status">
                <constant>2</constant>
            </setProperty>
            <wireTap id="bs8_wireTap2" uri="direct:gen_log"/>
            <log id="bs8_log2" message=">>>> Request Body to Backend: \n${body}"/>
            <removeHeaders id="bs8_removeHeaders1" pattern="Camel*"/>
            <setHeader headerName="CamelHttpMethod" id="bs8_setHeader1">
                <constant>POST</constant>
            </setHeader>
            <setHeader headerName="CamelHttpPath" id="bs8_setHeader2">
                <simple>{{service.eligiblecheck.url}}</simple>
            </setHeader>
            <setHeader headerName="Content-Type" id="bs8_setHeader3">
                <constant>application/json</constant>
            </setHeader>
            <to id="bs8_to2" uri="https4://{{bs.env}}?bridgeEndpoint=true&amp;connectionClose=true&amp;throwExceptionOnFailure=false"/>
            <unmarshal id="bs8_unmarshal1" ref="jackson"/>
            <!-- 			Checkpoint response received -->
            <setProperty id="bs8status_setProperty3" propertyName="status">
                <constant>3</constant>
            </setProperty>
            <wireTap id="bs8_wireTap3" uri="direct:gen_log"/>
        </route>
    </routeContext>
</beans>
